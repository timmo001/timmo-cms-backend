{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "header_media": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "published_at": {
      "type": "date",
      "required": false
    },
    "category": {
      "model": "category",
      "via": "articles"
    },
    "thumbnail_media": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "showcase_media": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "showcase_slides": {
      "type": "integer",
      "min": 1,
      "default": 3
    },
    "tags": {
      "via": "articles",
      "collection": "tag"
    }
  }
}
